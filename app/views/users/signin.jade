extends auth

block auth
  .well
    form.signin.form-horizontal(action="/users/session", method="post")
      p.error= message
      .form-group
        label.col-xs-2.control-label(for='email') Email
        .controls
          input .form-control #email(type='text', name="email", placeholder='Email')

      .form-group
        label.col-xs-2.control-label(for='password') Password
        .controls
          input .form-control #password(type='password', name="password", placeholder='Password')

      .form-actions
        .col-xs-2 
        button.btn.btn-primary(type='submit') Sign in
        &nbsp;
        | or&nbsp;
        a.show-signup(href="/signup") Sign up
